    </div>
  </div>
</div>


  <!-- Wavesurfer -->
<!-- Wavesurfer -->
<script src="https://unpkg.com/wavesurfer.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const globalTitle = document.querySelector("#global-player .current-track");
    const playBtn = document.getElementById("play-btn");
    const pauseBtn = document.getElementById("pause-btn");
    

    let wavesurfer = WaveSurfer.create({
      container: '#waveform',
      waveColor: 'limegreen',
      progressColor: '#0f0',
      cursorColor: '#fff',
      height: 60,
      responsive: true,
    });

    function loadTrack(src, title) {
      wavesurfer.load(src);
      globalTitle.textContent = "Now playing: " + title;
    }
    const volumeSlider = document.getElementById("volume-slider");
wavesurfer.setVolume(volumeSlider.value);

volumeSlider.addEventListener("input", (e) => {
  wavesurfer.setVolume(e.target.value);
});

    
// ✅ Handles both buttons and highlight cards
document.querySelectorAll("[data-src]").forEach(el => {
  el.addEventListener("click", () => {
    const src = el.getAttribute("data-src");
    const title = el.getAttribute("data-title");

    loadTrack(src, title);

    // Wait until the track is ready, then autoplay
    wavesurfer.once("ready", () => {
      wavesurfer.play();
    });
  });
});

// ✅ Play/pause controls
playBtn.addEventListener("click", () => wavesurfer.play());
pauseBtn.addEventListener("click", () => wavesurfer.pause());

  });
</script>


  <style>
    /* Global Player */
    #global-player {
      
      position: fixed; bottom: 0; left: 50%; transform: translateX(-50%);
      width: 90%; max-width: 1200px; background: rgba(0, 0, 0, 0.85);
      padding: 1rem; border-radius: 10px; z-index: 999;
      display: flex; flex-direction: column; gap: 0.5rem;
    }
    #global-player .current-track { font-weight: bold; color: #fff; }
