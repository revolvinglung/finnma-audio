  <!-- Global Player -->
<div id="global-player">
  <div class="player-wrapper">
    <div class="current-track">Now playing: </div>
    <div id="waveform"></div>
    <div class="controls">
      <button id="play-btn">▶</button>
      <button id="pause-btn">⏸</button>
